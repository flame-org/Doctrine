{
	"name": "flame/doctrine",
	"type": "library",
    "description": "Collection of classes for working with Doctrine2 on Flame framework",
    "keywords": ["doctrine2", "doctrine", "nette", "flame", "framework", "tools"],
    "homepage": "https://github.com/flame-org/Doctrine",
    "license": "BSD-2-Clause-FreeBSD",
    "minimum-stability":"dev",

    "authors": [
        {
            "name": "Jiří Šifalda",
            "homepage": "http://jsifalda.name/"
        }
    ],

    "support":{
        "email":"flame@jsifalda.name",
        "issues":"https://github.com/flame-org/Doctrine/issues"
    },

	"require": {
		"php": ">=5.3.2",
		"doctrine/orm": "2.3.*@stable",
		"nette/nette": ">=2.0.1"
	},

	"require-dev": {
		"flame/framework": "@dev",
		"nette/tester": "@dev",
		"janmarek/mockista": "@dev"
	},

	"config": {
		"vendor-dir": "libs"
	},

	"autoload": {
		"psr-0": {"Flame": ""},
		"classmap": [
			"Flame/Doctrine/exceptions.php"
		]
	}
}